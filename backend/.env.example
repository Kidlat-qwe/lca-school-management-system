# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
# For Replit: Use a cloud database like Neon, Supabase, or Railway
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=psms_db
DB_USER=your-database-user
DB_PASSWORD=your-database-password
# SSL is required for cloud databases (auto-enabled if host contains 'neon' or 'aws')
DB_SSL=true

# Firebase Configuration
# Project ID from Firebase Console
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Admin SDK Configuration
# Path to your Firebase Admin SDK JSON file
FIREBASE_ADMIN_SDK_PATH=./config/your-firebase-adminsdk-file.json
FIREBASE_API_KEY=your-firebase-api-key

# CORS Configuration
# For Replit: Set this to your frontend Replit URL (e.g., https://your-frontend-repl.id.repl.co)
# For local development: http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Replit Frontend URL (optional, for additional CORS support)
# Set this to your frontend Replit URL if deploying separately
REPLIT_FRONTEND_URL=

# SMTP Configuration for Email Service
SMTP_HOST=your-smtp-host
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=your-smtp-from-email

# Installment Invoice Scheduler
# Cron schedule (default: daily at 2:00 AM)
INSTALLMENT_INVOICE_SCHEDULE=0 2 * * *
# Run on startup (for testing)
RUN_INSTALLMENT_INVOICE_ON_STARTUP=false

